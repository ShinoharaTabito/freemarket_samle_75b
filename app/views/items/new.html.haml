.all
  .header
    = render "layouts/header"
    %nav.bread-crumbs
      %ul
        %li 
          = link_to root_path do
            furima
          = icon('fas','angle-right')
        %li 
          - breadcrumb :items_new
          = breadcrumbs separator: " &rsaquo; "
  .register_main
    .register_form
      .image_register
        .image_area
          .register_title
            出品画像
          .image_text-info
            最大10枚までアップロードできます。
          %label
            .image_form
              %input.image_btn{accept: "image/png,image/jpeg", autocomplete: "off", multiple: "multiple", style: "display:none", tabindex: "-1", type: "file"}/
              .image-btn-image
              = image_tag ('icon_camera.png')
      .item_register
        .item_name_group
          .register_title
            商品名
          %input.item_name_form{autocomplete: "off", name: "name", placeholder: "40文字まで", type: "text", value: ""}/
        .item_info_group
          .register_title
            商品の説明
          %textarea.item_info_form{name: "description", placeholder: "商品の説明（必須 1,000文字以内）\n（色、素材、重さ、定価、注意点など）\n\n例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。\n          ", rows: "7"}


      
      .status_register
        = form_with(model: @item, local: true) do |form|
          .status_register__status_category_group
            .status_register__status_category_group__category
              .status_register__status_category_group__category__register_title
                カテゴリー
              .status_register__status_category_group__category__choose
                = form.collection_select :category_id, @category, :id, :name, {prompt: '---'}, {id: 'parent_category'}


        .status_brand_group
          .register_title
            ブランド
          %input.brand_form{autocomplete: "off", name: "brandName", placeholder: "例）シャネル", type: "text", value: ""}/
        .item_status_group
          .register_title
            商品の状態
          .status_form
            %select{name: ""}
              %option{value: ""}選択してください
              %option{value: ""}新品、未使用
              %option{value: ""}未使用に近い
              %option{value: ""}目立った傷や汚れなし
              %option{value: ""}やや傷や汚れあり
              %option{value: ""}傷や汚れあり
              %option{value: ""}全体的に状態が悪い

      .send_register
        .send_value_group
          .register_title
            配送料の負担
          .send_value_form
          %select{name: ""}
            %option{value: ""}選択してください
            %option{value: ""}送料込み(出品者負担)
            %option{value: ""}着払い(購入者負担)
