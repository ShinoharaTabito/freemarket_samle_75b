.header
  .header__logo
    =image_tag("logo.png", size: "220x70")
    
.purchase-content
  = form_tag(action: :pay, method: :post) do
    .purchase-content__title
      購入内容の確認
      .buy-content__item
        .buy-content-main
          .buy-image
            = image_tag "#{@items.item_imgs[0].url}", size: '300x250', class: 'buy-image__detail'
          .buy-details
            .buy-details__item-name
              = @items.name
              %p.buy-price
                = number_to_currency(@items.price,format: "%u%n",unit:"¥",precision: 0)
                %span.shopping-free (税込)送料込み
      .buy-content__item
        %form.buy-form
          .price-table
            .price-table__left
              支払い金額
            .price-table__right
              = number_to_currency(@items.price,format: "%u%n",unit:"¥",precision: 0)
      .buy-content__user-info
        .buy-content__user-info__inner
          %h3 支払い方法
          =link_to "変更する", "#", class:"update-btn"
        .buy-content__user-info__update
        - if @default_card_information.blank?
          %br /
        -else
          = "**** **** **** " + @default_card_information.last4
          %br
          = "有効期限 " + @exp_month + " / " + @exp_year
          %br
      .buy-content__user-info
        .buy-content__user-info__inner
        %h3 配送先
        .user-info-update
          = link_to "変更する", "#", class:"update-btn"
        .user-info-text
          〒111-1111
          %br
          シンガポール
          %br
          真我歩流
      .buy-content__submit
      = submit_tag("購入する", class: "buy-button")
