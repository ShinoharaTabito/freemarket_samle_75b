.contents
  %header.main-header 
    = render "layouts/header"
    %nav.bread-crumbs
      %ul
        %li 
          = link_to root_path do
            furima
          = icon('fas','angle-right')
        %li 
          - breadcrumb :card_show
          = breadcrumbs separator: " &rsaquo; "

.users-main
  .right-contents

    .card-show
      .card-show__content
        .card-show__content__title
          %span クレジットカード情報
        .card-list
          .card-list__info
            .card-list__info__title
              登録カード一覧
            .card-list__info__inner
              .card-list__info__inner__brand
                %figure
                = image_tag asset_path("card/#{@card_src}"), width: '60', height: '50', alt: @card_brand, id: "card_image"
              .card-list__info__inner__number
                = "**** **** **** " + @default_card_information.last4
              .card-list__info__inner__expiration
                .card-list__info__inner__expiration__title
                  有効期限
                .card-list__info__inner__expiration__date
                  = @exp_month + " / " + @exp_year
          .destroy-function
            .destroy-function__link
              = link_to card_path, method: :delete, class: "destroy-function__link__btn" do
                カードを削除する


  = render partial: 'users/left-contents_users'