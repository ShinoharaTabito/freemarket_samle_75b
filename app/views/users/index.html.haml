%header
  .users-header
  = render partial: 'layouts/header'
  %nav.bread-crumbs
    %ul
      %li 
        = link_to root_path do
          furima
        = icon('fas','angle-right')
      %li 
        - breadcrumb :mypage
        = breadcrumbs separator: " &rsaquo; "



.users-main
  .right-contents
    %section.user-info
      .user-info__contents
        = link_to "#" do
          %figure
            %img{:alt => "", :width => "60", :height => "60", :src => "//static.mercdn.net/thumb/members/394621039.jpg?1579745078" }/
          %p
            = current_user.name
    %section.user-todo
      .tab-todo
        やることリスト
      .tab-content
        %ul.todo-lists
          %li
            .list-item
              〇〇日までに、発送
            = icon('fas','angle-right')
          %li
            .list-item
              〇〇日までに、発送
            = icon('fas','angle-right')
    %section.buy-product
      %h2.buy-product__head 
        購入したもの
      .tab-buy
        取引中
      .tab-content
        %ul.buy-lists
          %li
            .list-item
              レディース、Tシャツ（S）
            = icon('fas','angle-right')




  .left-contents
    %nav.my-page-nav
      %p マイページ
      %ul.my-page-lists
        %li
          .lists-info
            = link_to "#" do
              購入確認ページ
              -# お知らせ
          = icon('fas','angle-right')
        %li
          .lists-info
            = link_to new_item_path do
              出品する
          = icon('fas','angle-right')
        %li
          .lists-info
            = link_to "#" do
              出品した商品
          = icon('fas','angle-right')
        %li
          .lists-info
            = link_to "#" do
              購入した商品
          = icon('fas','angle-right')
        %li
          .lists-info
            = link_to "#" do
              お問い合わせ
          = icon('fas','angle-right')
        %li
          .lists-info
            =link_to "#" do
              お知らせ
          = icon('fas','angle-right')
      %p 設定
      %ul.setting-lists

        %li.list-setting
          .list-setting__info
            - card = Card.where(user_id: current_user.id)
            - if card.blank?
              =link_to new_card_path do
                クレジットカード登録
              = icon('fas','angle-right')
            - else 
              = link_to card_path(current_user) do
                クレジットカード詳細・削除
              = icon('fas','angle-right')
        %li.list-setting
          .list-setting__info
            =link_to edit_user_path(current_user) do
              ログアウト
          = icon('fas','angle-right')



